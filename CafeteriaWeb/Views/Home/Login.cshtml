@model CafeteriaWeb.Entities.ClientesEnt

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout - Login.cshtml";
}


@using (Html.BeginForm("IniciarSesion","Home", FormMethod.Post)) { 
<h2>Login</h2>

<div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
        <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <a href="index.html" class="">
                    <h3 class="text-primary"><i class="fa fa-laptop me-2"></i>Cafeteria Web</h3>
                </a>
            </div>
            <div class="form-floating mb-3">
                @Html.TextBoxFor(m => m.Email, new { @type = "email", @class = "form-control", @placeholder = "correo@correo" })
                <label for="floatingInput">Correo Electronico</label>
            </div>
            <div class="form-floating mb-4">
                @Html.TextBoxFor(m => m.Contrasenna, new { @type = "password", @class = "form-control", @placeholder = "contraseña" })
                <label for="floatingPassword">Contraseña</label>
            </div>
            <div class="d-flex align-items-center justify-content-between mb-4">
                <div class="form-check">
                </div>
                <a href="">Recuperar Contraseña</a>
            </div>
            <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Iniciar Session</button>
            <p class="text-center mb-0">Si no tiene cuenta registrese <a href="@Url.Action("Registro","Home")">Registrarse</a></p>
        </div>
    </div>
</div>
}

